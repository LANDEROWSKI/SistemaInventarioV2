@model SistemaInventario.Modelos.Bodega

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var titulo = "Crear Bodega";
}

<form method="post">
    <div style="padding-left:15%; padding-right:15%; padding-bottom:inherit.4rem;">
        <div class="row border-0">
            <div asp-asp-validation-summary="ModelOnly" class="text-danger">
            </div>
        </div>
        @if (Model.Id != 0)
        {
            //Actualizar
            titulo = "Actualizar Bodega";
            <input type="hidden" asp-for="Id" />
        }
        <div class="col-12 border-bottom p-0">
            <h2 class="text-primary">@titulo</h2>
        </div>

        <div class="row mb-2 mt-2">
            <div class="form-group col-md-6">
                <label for="Nombre">Nombre</label>
                <input type="text" asp-for="Nombre" class="form-control" placeholder="Nombre de la Bodega" />
                <span asp-for="Nombre" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-2 mt-2">
            <div class="form-group col-md-6">
                <label for="Descripcion">Descripcion</label>
                <input type="text" asp-for="Descripcion" class="form-control" placeholder="Descripcion de la Bodega" />
                <span asp-for="Descripcion" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-2 mt-2">
            <div class="form-group col-md-6">
                <label for="Estado">Estado</label>
                <select asp-for="Estado" class="form-control">
                    <option value="true">Activo</option>
                    <option value="false">Inactivo</option>
                </select>
                <span asp-for="Estado" class="text-danger"></span>
            </div>
        </div>

        <br />

        <div>
            @if (Model.Id != 0)
            {
                <partial name="_BotonesActualizarYREGRESAR" model="Model.Id"></partial>
            }
            else
            {
                <partial name="_BotonesCrearYRegresar"></partial>
            }
        </div>

    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
}